class AddviaemailAdminHelper {
    /**
     * Verify the existence of  functions that we require to access an email box.
     *
     * @return array ('fail' => array(func, func, ...), 'success' => array(func, func, ...))
     */
    function testRequiredFunctions() {
	global $gallery;
	$phpVm = $gallery->getPhpVm();

	$emailFunctions = array();
	$emailFunctions[] = 'imap_timeout';
	$emailFunctions[] = 'imap_open';
	$emailFunctions[] = 'imap_errors';
	$emailFunctions[] = 'imap_headers';
	$emailFunctions[] = 'imap_body';
	$emailFunctions[] = 'imap_headerinfo';
	$emailFunctions[] = 'imap_fetchstructure';
	$emailFunctions[] = 'imap_close';
	$emailFunctions[] = 'imap_expunge';

	$funcsReport = array('success' => array(), 'fail' => array());
	foreach ($emailFunctions as $emailFunction) {
	    if ($phpVm->function_exists($emailFunction)) {
		$funcsReport['success'][] = $emailFunction;
	    } else {
		$funcsReport['fail'][] = $emailFunction;
	    }
	}

	return $funcsReport;
    }
}
